 ..S ff=$S(f="FCL":7,f="COL":13,f="FTR":8,f="RTR":16,f="CMD":14,1:999),nynx="0,0" I $P(@(BSR_"(BST,ny,nx)"),"@",ff)?.N1",".N S nynx=$P(@$ZR,"@",ff)
 ..I f="COL",$P(@(BSR_"(BST,ny,nx)"),"@",13)?.N1",".N,$D(@(BSR_"(BST,f,ny,nx,2)")) S %KAT(4,f,2)=@$ZR
