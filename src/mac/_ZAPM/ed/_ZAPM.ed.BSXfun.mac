 I $ZV["Wind"!($ZV["Cach"||($ZV["IRIS")) D  Q
a .I $ZV["MSM" S x=+$P(W,",",2),x1=+$P(W,",",4),B=$$GLRET^%ZAPM.ed.BSF12($NA(@Mass@(N,1))) D PUT^%VIDEO(.B,x-1,y-1,x1-x+1,y1-y+1,2)
