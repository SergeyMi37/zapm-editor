 s Ra=$S(Ra=1!(Ra=""):"-----|",Ra=2:"=====|",Ra=" ":"      ",1:"§§§§§§")
 s:y1<0 y1=0 s:x1<0 x1=0 s:y2>26 y2=26 s:x2>81 x2=81
 s Clr=$J("",x2-x1-1),(Up,Dn)=$TR(Clr," ",$E(Ra,2))
 i x1>0 s Clr=$E(Ra,6)_Clr,Up=$E(Ra)_Up,Dn=$E(Ra,4)_Dn
