 S tipt=$S($G(tit)="":1,in5=0:1,$P(tit,",")=1&($P(tit,",",2)=1):1,$P(tit,",")=1&($P(tit,",",2)'=1):2,$P(tit,",")'=1&($P(tit,",",2)=1):3,1:4)
