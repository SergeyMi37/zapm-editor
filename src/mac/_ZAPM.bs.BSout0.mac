 .S kw=kw+1,i2=kw+1
 .S ^%ZAPM.bs.BSbufB("W"_$G(%BS(3),$P)_$J_"u",1,i2)="1@"_kx_"@3@10@@@@@1@1;6;33;45@@@@@Колонка  :"_kw_"         #"_$S(tipt=1!(i1=1):"",i1'=1&(tipt=2!(tipt=4)):1_":1:"_($P(tit,",",2)-1)_",",1:"")_i1_":1:"_i3 Q
 
